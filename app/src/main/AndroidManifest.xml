<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.blackmirror.dongda">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name = "android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name = "android.hardware.camera" />
    <uses-feature android:name = "android.hardware.camera.autofocus" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/dongda_logo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme" >
        <activity android:name=".Landing.LandingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Landing.PhoneInputActivity">
        </activity>
        <activity android:name=".Landing.NameInputActivity">
        </activity>
        <activity android:name=".Landing.PhotoChangeActivity">
        </activity>
    </application>

    <uses-sdk android:minSdkVersion="22"
              android:targetSdkVersion="25" />

</manifest>