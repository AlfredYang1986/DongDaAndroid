<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.EditUserInfoActivity">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sv_service_photo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:actualImageScaleType="focusCrop"
        app:placeholderImage="@drawable/avatar_0"
        app:placeholderImageScaleType="focusCrop"/>

    <ImageView
        android:id="@+id/iv_service_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/details_icon_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <!--<com.facebook.drawee.view.SimpleDraweeView
        app:roundingBorderWidth="2dp"

        app:layout_constraintTop_toTopOf="@id/sv_service_photo"
        app:layout_constraintBottom_toBottomOf="@id/sv_service_photo"
        app:layout_constraintLeft_toLeftOf="@id/sv_service_photo"
        app:layout_constraintRight_toRightOf="@id/sv_service_photo"
        app:roundAsCircle="true"
        android:id="@+id/sv_teacher_bg_photo"
        app:actualImageScaleType="focusCrop"
        android:layout_width="72dp"
        android:layout_height="72dp"/>-->

    <TextView
        android:id="@+id/tv_service_tag"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/tv_service_name_shape"
        android:gravity="center"
        android:textColor="#FFFFFFFF"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@id/sv_service_photo"
        app:layout_constraintLeft_toLeftOf="@id/sv_service_photo"
        app:layout_constraintRight_toRightOf="@id/sv_service_photo"
        app:layout_constraintTop_toTopOf="@id/sv_service_photo"
        />

    <TextView
        android:id="@+id/tv_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:textColor="#FF0D0D0D"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_service_photo"
        />

    <TextView
        android:id="@+id/tv_service_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF737373"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_service_name"
        app:layout_constraintTop_toBottomOf="@id/tv_service_name"
        />

    <TextView
        android:id="@+id/tv_service_about_me"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginTop="29dp"
        android:text="@string/about_me_dec"
        android:textColor="#FF404040"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_service_name"
        app:layout_constraintTop_toBottomOf="@id/tv_service_teacher_name"
        />

    <TextView
        android:id="@+id/tv_service_dec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:maxLines="100"
        android:textColor="#FF737373"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_service_about_me"
        />

</android.support.constraint.ConstraintLayout>
