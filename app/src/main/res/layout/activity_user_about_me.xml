<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.EditUserInfoActivity">



    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sv_user_about_photo"
        app:actualImageScaleType="focusCrop"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <ImageView
        android:layout_marginTop="32dp"
        android:id="@+id/iv_service_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:src="@drawable/details_icon_back"
        app:layout_constraintLeft_toLeftOf="@id/sv_user_about_photo"
        app:layout_constraintTop_toTopOf="@id/sv_user_about_photo"/>

    <TextView
         android:id="@+id/tv_user_logout"
        app:layout_constraintTop_toTopOf="@id/sv_user_about_photo"
        app:layout_constraintRight_toRightOf="@id/sv_user_about_photo"
        android:layout_marginTop="33dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_logout"
        android:textColor="#FFFFFFFF"
        android:textSize="17sp"
        />

    <ImageView
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/sv_user_about_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/sv_user_about_photo"
         android:id="@+id/iv_about_edit"
        android:background="@drawable/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_user_about_name"
        app:layout_constraintTop_toBottomOf="@id/sv_user_about_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0D0D0D"
        android:textSize="26sp"
        />


    <TextView
        android:id="@+id/tv_user_about_me"
        app:layout_constraintTop_toBottomOf="@id/tv_user_about_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_user_about_name"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="@string/about_me_dec"
        android:textColor="#FF404040"
        android:textSize="15sp"
        />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_about_me"
        android:id="@+id/tv_user_about_dec"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:textColor="#FF737373"
        android:textSize="15sp"
        />

</android.support.constraint.ConstraintLayout>
