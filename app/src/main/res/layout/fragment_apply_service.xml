<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sys_bar_white"
    >

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="#FFF7F9FA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <ImageView
        android:id="@+id/iv_home_head_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/icon_back_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sv_user_photo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="20dp"
        app:actualImageScaleType="focusCrop"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:placeholderImage="@drawable/avatar_0"
        app:placeholderImageScaleType="focusCrop"
        app:roundAsCircle="true"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="线瓣妈妈"
        android:textColor="#FF404040"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/sv_user_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/sv_user_photo"
        />


    <TextView
        android:id="@+id/tv_join_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:foreground="?attr/selectableItemBackground"
        android:paddingBottom="19dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="申请成为服务者"
        android:textColor="#FF404040"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"

        />

    <View
        android:id="@+id/view_line_1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:background="@color/line_bg_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_join_service"
        />


    <TextView
        android:id="@+id/tv_apply_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:paddingBottom="21dp"
        android:paddingLeft="20dp"
        android:paddingTop="22dp"
        android:text="设置"
        android:textColor="#FF404040"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line_1"
        />

    <View
        android:id="@+id/view_line_2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:background="@color/line_bg_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_apply_setting"
        />


</android.support.constraint.ConstraintLayout>