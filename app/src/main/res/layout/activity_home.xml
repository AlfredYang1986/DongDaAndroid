<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/ctl_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteBackground"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.homeActivity.HomeActivity"
    android:orientation="vertical">


    <com.blackmirror.dongda.ui.view.MyFragmentTabHost
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/fth_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@android:id/tabs"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@android:id/tabcontent"
                android:layout_width="0dp"
                android:layout_height="0dp"/>


            <TabWidget
                app:layout_constraintTop_toBottomOf="@android:id/tabcontent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_weight="0"
                android:layout_marginLeft="49dp"
                android:layout_marginRight="49dp"
                android:id="@android:id/tabs"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:orientation="horizontal"/>


        </android.support.constraint.ConstraintLayout>


    </com.blackmirror.dongda.ui.view.MyFragmentTabHost>


</android.support.design.widget.CoordinatorLayout>