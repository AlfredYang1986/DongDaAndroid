<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/cl_tl_tr_2_shape">

    <TextView
        android:id="@+id/tv_add_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:text="添加孩子信息"
        android:textColor="#FF34384A"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/et_input_name"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_4_4_shape"
        android:hint="昵称"
        android:paddingLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_add_dec"
        app:layout_constraintRight_toLeftOf="@id/rg_choose"
        app:layout_constraintTop_toBottomOf="@id/tv_add_dec"/>


    <RadioGroup
        android:id="@+id/rg_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/et_input_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_input_name">

        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/rb_female_selector"/>

        <RadioButton
            android:id="@+id/rb_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:button="@drawable/rb_male_selector"/>

    </RadioGroup>

    <View
        android:id="@+id/view_date_bg"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/view_4_4_shape"
        app:layout_constraintLeft_toLeftOf="@id/et_input_name"
        app:layout_constraintRight_toRightOf="@id/rg_choose"
        app:layout_constraintTop_toBottomOf="@id/rg_choose"/>

    <TextView
        android:id="@+id/tb_birth_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="生日"
        android:textColor="#FFDFE0E3"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/view_date_bg"
        app:layout_constraintLeft_toLeftOf="@id/view_date_bg"
        app:layout_constraintTop_toTopOf="@id/view_date_bg"
        />

    <TextView
        android:id="@+id/tv_choose_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="请选择"
        android:textColor="#FFDFE0E3"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/view_date_bg"
        app:layout_constraintRight_toLeftOf="@id/iv_enter"
        app:layout_constraintTop_toTopOf="@id/view_date_bg"
        />

    <ImageView
        android:id="@+id/iv_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="@drawable/icon_enter_gray"
        app:layout_constraintBottom_toBottomOf="@id/view_date_bg"
        app:layout_constraintRight_toRightOf="@id/view_date_bg"
        app:layout_constraintTop_toTopOf="@id/view_date_bg"/>

    <TextView
        android:id="@+id/tv_dec_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="您的隐私非常重要，孩子信息将仅用于信息确认"
        android:textColor="#FFB5B6BC"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/et_input_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_date_bg"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="24dp"
        android:background="#FFDFE0E3"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/font_white"
        android:textSize="17sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dec_2"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_chhoose_birth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:background="@color/sys_bar_white"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dec_2">

        <View
            android:id="@+id/view_save_bg"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="#FFFAFAFA"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_save_pick"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:text="完成"
            android:textColor="#FF738CC2"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@id/view_save_bg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_save_bg"
            />


        <!--此部分需要完整复制过去，删减或者更改ID会导致初始化找不到内容而报空-->
        <LinearLayout
            android:id="@+id/optionspicker"
            android:layout_width="0dp"
            android:layout_height="215dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_save_bg">

            <com.contrarywind.view.WheelView
                android:id="@+id/options1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.contrarywind.view.WheelView
                android:id="@+id/options2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.contrarywind.view.WheelView
                android:id="@+id/options3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>