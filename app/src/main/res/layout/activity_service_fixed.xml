<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sys_bar_white"
    tools:context=".ui.activity.enrol.EnrolTimePayActivity">

    <include layout="@layout/activity_pay_header"/>

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
         android:id="@+id/tv_all_day_dec"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/tb_toolbar"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全日托"
        android:textColor="#FF404040"
        android:textSize="15sp"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_all_month_price_root"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/cl_choose_age_shape"
        app:layout_constraintTop_toBottomOf="@id/tv_all_day_dec"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_time_price_dec"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单月价格"
            android:textColor="#FF404040"
            android:textSize="15sp"
            />

        <TextView
            app:layout_constraintTop_toTopOf="@id/tet_all_month_price"
            app:layout_constraintBottom_toBottomOf="@id/tet_all_month_price"
            app:layout_constraintRight_toLeftOf="@id/tet_all_month_price"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#FFD9D9D9"
            android:textSize="14sp"
            />

        <android.support.design.widget.TextInputEditText
            android:inputType="number|numberDecimal"
            android:textColorHint="#FFD9D9D9"
            android:id="@+id/tet_all_month_price"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_time_price_dec"
            app:layout_constraintBottom_toBottomOf="@id/tv_time_price_dec"
            android:background="@null"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF404040"
            android:textSize="22sp"
            />

    </android.support.constraint.ConstraintLayout>


    <TextView
         android:id="@+id/tv_mid_day_dec"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@id/cl_all_month_price_root"
        app:layout_constraintLeft_toLeftOf="@id/tv_all_day_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="半日托"
        android:textColor="#FF404040"
        android:textSize="15sp"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_hour_price_root"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/cl_choose_age_shape"
        app:layout_constraintTop_toBottomOf="@id/tv_mid_day_dec"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_mid_day_dec_dec"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单月价格"
            android:textColor="#FF404040"
            android:textSize="15sp"
            />

        <TextView
            app:layout_constraintTop_toTopOf="@id/tet_mid_month_price"
            app:layout_constraintBottom_toBottomOf="@id/tet_mid_month_price"
            app:layout_constraintRight_toLeftOf="@id/tet_mid_month_price"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#FFD9D9D9"
            android:textSize="14sp"
            />

        <android.support.design.widget.TextInputEditText
            android:inputType="number|numberDecimal"
            android:textColorHint="#FFD9D9D9"
            android:id="@+id/tet_mid_month_price"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_mid_day_dec_dec"
            app:layout_constraintBottom_toBottomOf="@id/tv_mid_day_dec_dec"
            android:background="@null"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF404040"
            android:textSize="22sp"
            />

    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>