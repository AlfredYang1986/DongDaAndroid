<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_name_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/landing_activity_background"
    tools:context=".ui.activity.Landing.NameInputActivity">

    <TextView
         android:id="@+id/tv_input_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="还有，您的姓名?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:gravity="center"/>


    <EditText
         android:id="@+id/et_input_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_input_name"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="36dip"
            android:layout_margin="36dp"
            android:padding="5dip"
            android:textColorHint="#AAAAAA"
            android:textSize="15dip"
            android:maxLines="1"
            android:hint="@string/name_input_hint_nickname" />

    <Button
        android:background="@drawable/btn_login_selector"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_input_name"
         android:id="@+id/btn_next"
        android:text="下一步"
        android:layout_width="wrap_content"
        android:layout_height="36dp"/>

</android.support.constraint.ConstraintLayout>
