<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="223dp"
            android:src="@drawable/default_image"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Service title context ......"
            android:textColor="@color/colorBlack"
            android:layout_below="@+id/img_cover"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/text_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView android:id="@+id/img_position_sign"
                android:layout_width="10dp"
                android:layout_height="12dp"
                android:src="@drawable/home_icon_location"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/text_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service position addr info"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_position_sign"
                android:layout_toEndOf="@+id/img_position_sign"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />

            <!--TODO:float:right-->
            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¥Price"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>