<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<com.facebook.drawee.view.SimpleDraweeView
    app:actualImageScaleType="focusCrop"
    android:background="@drawable/home_cover_00"
    android:id="@+id/sv_care_photo"
    android:layout_width="319dp"
    android:layout_height="197dp"
    app:roundedCornerRadius="4dp"
    />

    <TextView
         android:id="@+id/tv_care_name"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/sv_care_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蒙特梭利"
        android:textColor="#FF23554F"
        android:textSize="15sp"
        />
    <TextView
         android:id="@+id/tv_care_detail"
        app:layout_constraintTop_toBottomOf="@id/tv_care_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="皮皮时光的日间看顾"
        android:textColor="#FF404040"
        android:textSize="18sp"
        />
    <TextView
         android:id="@+id/tv_care_location"
        app:layout_constraintTop_toBottomOf="@id/tv_care_detail"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大兴区"
        android:textColor="#FF737373"
        android:textSize="15sp"
        />
</android.support.constraint.ConstraintLayout>
