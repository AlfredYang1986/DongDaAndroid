<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <TextView
            android:id="@+id/text_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textSize="20sp"
            android:textColor="@color/colorGary158"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="39dp" />


        <TextView
            android:id="@+id/text_edit_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit profile enter"
            android:textSize="14sp"
            android:textColor="@color/colorTheme"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/text_screen_name"
            android:layout_alignLeft="@+id/text_screen_name"
            android:layout_alignStart="@+id/text_screen_name" />

        <ImageView
            android:id="@+id/image_screen_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/text_screen_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/default_user"/>

    </RelativeLayout>
</RelativeLayout>