<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".ui.activity.landing.LandingActivity">

    <android.support.constraint.Guideline
        android:id="@+id/gl_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.214"/>


    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_logo_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_root"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:text="@string/str_landing_dec"
        android:textColor="#FFFFFFFF"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_login_logo"/>


    <android.support.constraint.ConstraintLayout
         android:id="@+id/cl_phone_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/landing_action_button"
        android:gravity="center"
        android:text="@string/phone_login"
        android:textColor="#FF59D5C7"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@id/cl_wechat_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            app:layout_constraintHorizontal_chainStyle="packed"
             android:id="@+id/iv_cellphone_logo"
            android:layout_width="22dp"
            android:layout_height="17dp"
            android:src="@drawable/login_icon_cellphone"
            app:layout_constraintBottom_toBottomOf="@id/tv_phone_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_phone_login"
            app:layout_constraintTop_toTopOf="@id/tv_phone_login"/>

        <TextView
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_cellphone_logo"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tv_phone_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/phone_login"
            android:textColor="#FF59D5C7"
            android:textSize="17sp"
            />

    </android.support.constraint.ConstraintLayout>




    <android.support.constraint.ConstraintLayout
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cl_wechat_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/landing_wechat_button"
        >

        <ImageView
            app:layout_constraintHorizontal_chainStyle="packed"
            android:id="@+id/iv_wechat"
            android:layout_width="22dp"
            android:layout_height="17dp"
            android:src="@drawable/login_icon_wechat"
            app:layout_constraintBottom_toBottomOf="@id/tv_wechat_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_wechat_login"
            app:layout_constraintTop_toTopOf="@id/tv_wechat_login"/>

        <TextView
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_wechat"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tv_wechat_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/phone_login"
            android:textColor="@color/font_white"
            android:textSize="17sp"
            />

    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>
