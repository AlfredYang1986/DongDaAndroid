<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_photo__change"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/landing_activity_background"
        tools:context="com.blackmirror.dongda.Landing.PhotoChangeActivity">

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="最后一步, 您的照片?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:gravity="center"/>

        <ImageView
                android:id="@+id/iv_head_photo"
                android:layout_marginTop="36dip"
                android:layout_width="100dip"
                android:layout_height="100dip"
                app:srcCompat="@drawable/landing_dongda_logo"/>

        <TextView
                android:id="@+id/landing_screen_name_textview"
                android:text="姓名"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="26dip"
                android:textColor="@android:color/white"
                android:gravity="center"/>

        <Button
                android:id="@+id/btn_enter_home"
                android:text="进入咚哒"
                android:background="@drawable/landing_action_button"
                android:textColor="#00d1c1"
                android:layout_marginTop="36dip"
                android:layout_width="200dip"
                android:layout_height="60dip"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/landing_photo_btn_group"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:layout_alignParentBottom="true">

        <Button
                android:id="@+id/btn_enter_album"
                android:text="相册"
                android:textColor="#00d1c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/btn_open_camera"
                android:text="相机"
                android:textColor="#00d1c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/btn_enter_cancel"
                android:text="取消"
                android:textColor="#00d1c1"
                android:layout_marginTop="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
