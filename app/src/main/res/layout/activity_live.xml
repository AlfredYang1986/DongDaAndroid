<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.live.LiveActivity">

    <SurfaceView
        android:id="@+id/sv_push"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/bt_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始直播"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bt_push"
        android:text="停止直播"
        android:id="@+id/bt_stop_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        app:layout_constraintBottom_toBottomOf="@id/bt_stop_push"
        app:layout_constraintTop_toTopOf="@id/bt_stop_push"
        app:layout_constraintLeft_toRightOf="@id/bt_stop_push"
        android:id="@+id/iv_change_camera"
        android:layout_marginLeft="10dp"
        android:src="@drawable/camera_id"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</android.support.constraint.ConstraintLayout>