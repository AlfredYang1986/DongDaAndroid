<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.landing.InputCodeActivity">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="9dp"
        android:layout_height="16dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/icon_back_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/tv_code_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="请输入验证码"
        android:textColor="#FF34384A"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        />


    <TextView
        android:id="@+id/tv_has_send_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="已发送4位数验证码至"
        android:textColor="#FF5F6270"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_code_dec"
        app:layout_constraintTop_toBottomOf="@id/tv_code_dec"
        />

    <TextView
        android:id="@+id/tv_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+86 188 754 8754"
        android:textColor="#FF5F6270"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_has_send_code"
        app:layout_constraintTop_toBottomOf="@id/tv_has_send_code"
        />

    <TextView
        android:id="@+id/tv_code_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="6"
        android:textColor="#FF34384A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/view_line_1"
        app:layout_constraintRight_toRightOf="@id/view_line_1"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_no"
        />

    <TextView
        android:id="@+id/tv_code_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="8"
        android:textColor="#FF34384A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/view_line_2"
        app:layout_constraintRight_toRightOf="@id/view_line_2"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_no"
        />

    <TextView
        android:id="@+id/tv_code_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="6"
        android:textColor="#FF34384A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/view_line_3"
        app:layout_constraintRight_toRightOf="@id/view_line_3"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_no"
        />

    <TextView
        android:id="@+id/tv_code_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="8"
        android:textColor="#FF34384A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/view_line_4"
        app:layout_constraintRight_toRightOf="@id/view_line_4"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_no"
        />

    <View
        android:id="@+id/view_line_1"
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:background="#FFE0E0E0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/view_line_2"
        app:layout_constraintTop_toBottomOf="@id/tv_code_1"
        />

    <View
        android:id="@+id/view_line_2"
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:background="#FFE0E0E0"
        app:layout_constraintBottom_toBottomOf="@id/view_line_1"
        app:layout_constraintLeft_toRightOf="@id/view_line_1"
        app:layout_constraintRight_toLeftOf="@id/view_line_3"
        app:layout_constraintTop_toTopOf="@id/view_line_1"
        />

    <View
        android:id="@+id/view_line_3"
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:background="#FFE0E0E0"
        app:layout_constraintBottom_toBottomOf="@id/view_line_1"
        app:layout_constraintLeft_toRightOf="@id/view_line_2"
        app:layout_constraintRight_toLeftOf="@id/view_line_4"
        app:layout_constraintTop_toTopOf="@id/view_line_1"
        />

    <View
        android:id="@+id/view_line_4"
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_marginRight="40dp"
        android:background="#FFE0E0E0"
        app:layout_constraintBottom_toBottomOf="@id/view_line_1"
        app:layout_constraintLeft_toRightOf="@id/view_line_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_line_1"
        />


    <EditText
        android:maxLength="4"
        android:cursorVisible="false"
        android:textSize="0sp"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/tv_code_dec"
        android:id="@+id/et_support_num"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@android:color/transparent"
        android:digits="1234567890"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_resend_code"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_login_bg"
        android:gravity="center"
        android:text="重新发送"
        android:textColor="@color/font_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line_1"
        />


    <TextView
        android:id="@+id/tv_s_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="登录即代表我同意用户"
        android:textColor="#FFB5B6BC"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_s_content"
        />

    <TextView
        android:id="@+id/tv_s_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="服务条款及隐私协议"
        android:textColor="#00d1c1"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_s_dec"
        app:layout_constraintRight_toRightOf="parent"
        />


</android.support.constraint.ConstraintLayout>