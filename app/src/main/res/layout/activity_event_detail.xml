<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.EventDetailActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_root"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:theme="@style/AppTheme.AppBarOverlay">


        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="424dp"
            app:contentScrim="@color/sys_bar_white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@android:color/transparent"
            app:toolbarId="@+id/tb_toolbar">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="pin">

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_event_photo"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_event_photo_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="1/10"
                    android:textColor="#FFFFFFFF"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toTopOf="@id/iv_bottom_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <View
                    android:id="@+id/iv_bottom_bg"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:background="@drawable/iv_event_shape"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">


                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="13dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/icon_back_light"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_event_share"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/icon_share_light"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/iv_event_love"
                        app:layout_constraintTop_toTopOf="parent"/>


                    <ImageView
                        android:id="@+id/iv_event_love"
                        android:layout_width="26dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="17dp"
                        android:background="@drawable/icon_love_m_normal"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF">


            <TextView
                android:id="@+id/tv_event_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="动手"
                android:textColor="#FF5F6270"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/tv_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进击的乐高机器人"
                android:textColor="#FF34384A"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_event_dec"
                app:layout_constraintTop_toBottomOf="@id/tv_event_dec"
                />

            <ImageView
                android:id="@+id/iv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="@drawable/icon_event_age"
                app:layout_constraintLeft_toLeftOf="@id/tv_event_name"
                app:layout_constraintTop_toBottomOf="@id/tv_event_name"/>

            <TextView
                android:id="@+id/tv_event_exp_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="8-12岁"
                android:textColor="#FF5F6270"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/iv_age"
                app:layout_constraintTop_toTopOf="@id/iv_age"
                />

            <ImageView
                android:id="@+id/iv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/icon_event_date"
                app:layout_constraintLeft_toLeftOf="@id/iv_age"
                app:layout_constraintTop_toBottomOf="@id/iv_age"/>

            <TextView
                android:id="@+id/tv_event_exp_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="08/12 周四  09:00"
                android:textColor="#FF5F6270"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/iv_date"
                app:layout_constraintTop_toTopOf="@id/iv_date"
                />


            <ImageView
                android:id="@+id/iv_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/icon_event_location"
                app:layout_constraintLeft_toLeftOf="@id/iv_date"
                app:layout_constraintTop_toBottomOf="@id/iv_date"/>

            <TextView
                android:id="@+id/tv_event_exp_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="朝阳区 青年路甘露园中街"
                android:textColor="#FF5F6270"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/iv_loc"
                app:layout_constraintTop_toTopOf="@id/iv_loc"
                />

            <ImageView
                android:id="@+id/iv_dur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/icon_event_dur"
                app:layout_constraintLeft_toLeftOf="@id/iv_loc"
                app:layout_constraintTop_toBottomOf="@id/iv_loc"/>

            <TextView
                android:id="@+id/tv_event_exp_dur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="时长 2小时"
                android:textColor="#FF5F6270"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/iv_dur"
                app:layout_constraintTop_toTopOf="@id/iv_dur"
                />


            <android.support.v7.widget.CardView
                android:id="@+id/cv_event_exp_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFFFFFFF"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toBottomOf="@id/tv_event_exp_dur">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sv_brand_logo"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp"
                        app:actualImageScaleType="focusCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:placeholderImage="@drawable/pro_logo"
                        app:placeholderImageScaleType="focusCrop"
                        app:roundedCornerRadius="4dp"/>

                    <TextView
                        android:id="@+id/tv_brand_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="科学空间"
                        android:textColor="#FF242800"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toRightOf="@id/sv_brand_logo"
                        app:layout_constraintRight_toLeftOf="@id/iv_enter"
                        app:layout_constraintTop_toTopOf="@id/sv_brand_logo"
                        />


                    <TextView
                        android:id="@+id/tv_brand_dec"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="15dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="「彩色方块的转动中感受魔方的魅力」"
                        android:textColor="#FF5F6270"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@id/sv_brand_logo"
                        app:layout_constraintLeft_toRightOf="@id/sv_brand_logo"
                        app:layout_constraintRight_toLeftOf="@id/iv_enter"
                        />

                    <ImageView
                        android:id="@+id/iv_enter"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/icon_enter_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>


            <com.blackmirror.dongda.ui.view.MyTabLayout
                android:id="@+id/tl_exp_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toBottomOf="@id/cv_event_exp_brand"
                app:tabGravity="fill"
                app:tabIndicatorColor="#FF5464AC"
                app:tabIndicatorHeight="4dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#FF34384A"
                app:tabTextColor="#FF5464AC"/>


            <View
                android:id="@+id/view_line_2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="24dp"
                android:background="#0D000000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tl_exp_content"
                />

            <FrameLayout
                android:id="@+id/fl_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_2"/>


            <TextView
                android:id="@+id/tv_event_exp_loc_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:text="体验场地"
                android:textColor="#FF34384A"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl_content"
                />

            <TextView
                 android:id="@+id/tv_exp_loc_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="2"
                android:textColor="#FFB5B6BC"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_event_exp_loc_dec"
                app:layout_constraintLeft_toRightOf="@id/tv_event_exp_loc_dec"
                app:layout_constraintTop_toTopOf="@id/tv_event_exp_loc_dec"
                />

            <ImageView
                android:id="@+id/iv_enter_loc_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/icon_exp_theme_s"
                app:layout_constraintBottom_toBottomOf="@id/tv_event_exp_loc_dec"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_event_exp_loc_dec"/>

            <TextView
                 android:id="@+id/tv_enter_loc_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="查看场地详情"
                android:textColor="#FF5464AC"
                android:textSize="14sp"
                app:layout_constraintRight_toLeftOf="@id/iv_enter_loc_detail"
                app:layout_constraintTop_toTopOf="@id/tv_event_exp_loc_dec"
                />

            <com.amap.api.maps2d.MapView
                android:id="@+id/mv_event_exp_loc"
                android:layout_width="0dp"
                android:layout_height="205dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/mv_4_4_shape"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_event_exp_loc_dec"/>


            <View
                android:id="@+id/view_mv_bg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/view_b_2_shape"
                app:layout_constraintBottom_toBottomOf="@id/mv_event_exp_loc"
                app:layout_constraintLeft_toLeftOf="@id/mv_event_exp_loc"
                app:layout_constraintRight_toRightOf="@id/mv_event_exp_loc"
                app:layout_constraintTop_toTopOf="@id/tv_loc_now_near_dec"
                />

            <TextView
                android:id="@+id/tv_loc_now_near_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:paddingTop="8dp"
                android:text="当前最近"
                android:textColor="#FF5F6270"
                android:textSize="11sp"
                app:layout_constraintBottom_toTopOf="@id/tv_event_exp_loc_detail"
                app:layout_constraintLeft_toLeftOf="@id/mv_event_exp_loc"
                app:layout_constraintTop_toTopOf="@id/view_mv_bg"
                />

            <TextView
                android:id="@+id/tv_event_exp_loc_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="PROGWARTS-科学空间 青年路站"
                android:textColor="#FF5F6270"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/tv_event_exp_loc_qu"
                app:layout_constraintLeft_toLeftOf="@id/mv_event_exp_loc"
                app:layout_constraintRight_toRightOf="@id/mv_event_exp_loc"
                />

            <TextView
                android:id="@+id/tv_event_exp_loc_qu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="朝阳区 青年路甘露园中街"
                android:textColor="#FFB5B6BC"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/mv_event_exp_loc"
                app:layout_constraintLeft_toLeftOf="@id/mv_event_exp_loc"
                app:layout_constraintRight_toRightOf="@id/mv_event_exp_loc"
                />

            <!--todo 缺图片-->

            <android.support.constraint.ConstraintLayout
                 android:id="@+id/cl_join_root"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/holo_blue_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mv_event_exp_loc">

                <TextView
                    android:id="@+id/tv_exp_money_free_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="¥免费"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />


                <TextView
                    android:id="@+id/tv_event_exp_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="剩余名额16"
                    android:textColor="#FFFFFFFF"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_exp_money_free_dec"
                    app:layout_constraintLeft_toRightOf="@id/tv_exp_money_free_dec"
                    app:layout_constraintTop_toTopOf="@id/tv_exp_money_free_dec"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:text="申请报名"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/iv_enter_join"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:id="@+id/iv_enter_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/icon_enter_m_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>