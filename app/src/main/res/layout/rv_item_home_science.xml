<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sv_item_science_photo"
        android:layout_width="156dp"
        android:layout_height="104dp"
        app:actualImageScaleType="focusCrop"
        app:roundedCornerRadius="2dp"
        />

    <ImageView
        android:id="@+id/iv_item_science_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/home_art_like"
        app:layout_constraintRight_toRightOf="@id/sv_item_science_photo"
        app:layout_constraintTop_toTopOf="@id/sv_item_science_photo"/>

    <TextView
        android:id="@+id/tv_item_science_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="自主教研"
        android:textColor="#FF23554F"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/sv_item_science_photo"
        />

    <TextView
        android:id="@+id/tv_item_science_detail"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:singleLine="false"
        android:text="费因机器人俱乐部的机器人课程"
        android:textColor="#FF404040"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_science_name"
        />

    <TextView
        android:id="@+id/tv_item_science_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="东城区"
        android:textColor="#FF737373"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_science_detail"
        />
</android.support.constraint.ConstraintLayout>
