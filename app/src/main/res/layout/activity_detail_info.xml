<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_root"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:contentScrim="@color/sys_bar_white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@android:color/transparent"
            app:titleEnabled="false"
            app:toolbarId="@+id/tb_toolbar">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:layout_collapseMode="pin">

                <!--280dp-->
                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_detail_photo"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"/>


                <ImageView
                    android:id="@+id/iv_detail_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:minHeight="18dp"
                    android:minWidth="11dp"
                    android:padding="6dp"
                    android:src="@drawable/details_icon_back"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:id="@+id/iv_detail_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="26dp"
                    android:padding="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_art_like"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <com.blackmirror.dongda.ui.view.SlidingTabLayout
                    android:id="@+id/tl_detail_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/vp_detail_photo"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/sys_bar_white"
                    app:tabTextAppearance="@style/TabLayoutTextStyle"
                    app:tabTextColor="@color/sys_bar_white"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/sys_bar_white"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_tb_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="pin">

                    <ImageView
                        android:id="@+id/iv_detail_tb_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:src="@drawable/icon_back_black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tv_detail_tb_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_detail"
                        android:textColor="@color/head_text_black_color"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <ImageView
                        android:id="@+id/iv_detail_tb_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:padding="6dp"
                        android:src="@drawable/home_act_like"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.activity.ServiceDetailInfoActivity">


            <TextView
                android:id="@+id/tv_detail_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-light"
                android:text="“妈妈和宝贝一起体验了解芭蕾文化,共享芭蕾的乐趣. “"
                android:textColor="@color/text_dec_gray"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/tv_detail_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="艺术·芭蕾课程"
                android:textColor="@color/head_text_black_color"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_detail_content"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_content"
                />

            <TextView
                android:id="@+id/tv_detail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名校团队"
                android:textColor="@color/type_text_color"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_detail_content"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_course"
                />

            <View
                android:id="@+id/view_line_1"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:background="@color/line_bg_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_type"
                />

            <ImageView
                android:id="@+id/iv_detail_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.9dp"
                android:background="@drawable/age_detail"
                app:layout_constraintLeft_toLeftOf="@id/tv_detail_age_dec"
                app:layout_constraintRight_toRightOf="@id/tv_detail_age_dec"
                app:layout_constraintTop_toBottomOf="@id/view_line_1"/>

            <ImageView
                android:id="@+id/iv_detail_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.9dp"
                android:background="@drawable/class_detail"
                app:layout_constraintLeft_toLeftOf="@id/tv_class_mb_no"
                app:layout_constraintRight_toRightOf="@id/tv_class_mb_no"
                app:layout_constraintTop_toBottomOf="@id/view_line_1"
                />

            <ImageView
                android:id="@+id/iv_detail_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.9dp"
                android:background="@drawable/teacher_detail"
                app:layout_constraintLeft_toLeftOf="@id/tv_detail_teacher_dec"
                app:layout_constraintRight_toRightOf="@id/tv_detail_teacher_dec"
                app:layout_constraintTop_toBottomOf="@id/view_line_1"/>

            <TextView
                android:id="@+id/tv_detail_age_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="3.4dp"
                android:text="@string/age_range"
                android:textColor="@color/head_text_black_color"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_detail_age"
                />

            <TextView
                android:id="@+id/tv_detail_class_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.4dp"
                android:text="@string/student_num"
                android:textColor="@color/head_text_black_color"
                android:textSize="13sp"
                app:layout_constraintLeft_toRightOf="@id/tv_detail_age_dec"
                app:layout_constraintRight_toLeftOf="@id/tv_detail_teacher_dec"
                app:layout_constraintTop_toBottomOf="@id/iv_detail_age"
                />

            <TextView
                android:id="@+id/tv_detail_teacher_dec"
                android:layout_width="53dp"
                android:layout_height="18dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="3.4dp"
                android:text="@string/t_s_ratio"
                android:textColor="@color/head_text_black_color"
                android:textSize="13sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_detail_age"
                />

            <TextView
                android:id="@+id/tv_age_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="4-6岁"
                android:textColor="@color/class_info_color"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_detail_age_dec"
                app:layout_constraintRight_toRightOf="@id/tv_detail_age_dec"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_age_dec"
                />

            <TextView
                android:id="@+id/tv_class_mb_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="16"
                android:textColor="@color/class_info_color"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_detail_class_dec"
                app:layout_constraintRight_toRightOf="@id/tv_detail_class_dec"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_age_dec"
                />

            <TextView
                android:id="@+id/tv_t_s_ratio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="1:4"
                android:textColor="@color/class_info_color"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_detail_teacher_dec"
                app:layout_constraintRight_toRightOf="@id/tv_detail_teacher_dec"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_age_dec"
                />

            <View
                android:id="@+id/view_line_2"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="17dp"
                android:background="@color/line_bg_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_age_range"
                />

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20.5dp"
                android:text="美若舞蹈"
                android:textColor="@color/head_text_black_color"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_2"
                />

            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="美若老师"
                android:textColor="@color/text_dec_gray"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_course_name"
                app:layout_constraintTop_toBottomOf="@id/tv_course_name"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sv_teacher_bg"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16.5dp"
                app:actualImageScaleType="focusCrop"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_2"
                app:placeholderImage="@drawable/avatar_0"
                app:roundAsCircle="true"/>

            <TextView
                android:id="@+id/tv_brand_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="5"
                android:text="M"
                android:textColor="@color/bg_white_color"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/sv_teacher_bg"
                app:layout_constraintLeft_toLeftOf="@id/sv_teacher_bg"
                app:layout_constraintRight_toRightOf="@id/sv_teacher_bg"
                app:layout_constraintTop_toTopOf="@id/sv_teacher_bg"
                />

            <View
                android:id="@+id/view_line_3"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="19dp"
                android:background="@color/line_bg_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_teacher_name"
                />

            <TextView
                android:id="@+id/tv_service_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20.5dp"
                android:text="@string/service_dec"
                android:textColor="@color/head_text_black_color"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_3"
                />

            <TextView
                android:id="@+id/tv_dec_more"
                android:layout_width="30dp"
                android:layout_height="21dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="22.5dp"
                android:text="@string/open_dec_more"
                android:textColor="@color/text_dec_more_color"
                android:textSize="15sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_3"
                />

            <TextView
                android:id="@+id/tv_service_dec_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:letterSpacing="0.1"
                android:lineSpacingMultiplier="1.1"
                android:maxLines="4"
                android:textColor="@color/class_info_color"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_service_dec"
                />

            <TextView
                android:id="@+id/tv_service_dec_content_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:ellipsize="end"
                android:maxLines="30"
                android:textColor="#FF404040"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_service_dec_content"
                />

            <TextView
                android:id="@+id/tv_service_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginTop="13dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="#资深外教# #修身养性#"
                android:textColor="#FFA6A6A6"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@id/tv_service_dec"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_service_dec_content_more"
                />

            <View
                android:id="@+id/view_line_4"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:background="@color/line_bg_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_service_type"
                />

            <TextView
                android:id="@+id/tv_addr_safe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20.5dp"
                android:text="@string/addr_safe_dec"
                android:textColor="@color/head_text_black_color"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_4"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_addr_safe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="21.5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_addr_safe"/>

            <View
                android:id="@+id/view_line_5"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:background="@color/line_bg_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_addr_safe"
                />

            <TextView
                android:id="@+id/tv_service_location_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.5dp"
                android:text="@string/location_dec"
                android:textColor="@color/head_text_black_color"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:layout_constraintLeft_toLeftOf="@id/view_line_5"
                app:layout_constraintTop_toBottomOf="@id/view_line_5"
                />

            <TextView
                android:id="@+id/tv_service_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginTop="9dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="朝阳区望京悠乐汇A4座-213"
                android:textColor="@color/class_info_color"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="@id/view_line_5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_service_location_dec"/>


            <com.amap.api.maps2d.MapView
                android:id="@+id/mv_detail_location"
                android:layout_width="327dp"
                android:layout_height="117dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="13dp"
                app:layout_constraintBottom_toTopOf="@id/view_6"
                app:layout_constraintLeft_toLeftOf="@id/tv_service_location"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_service_location"/>

            <View
                android:id="@+id/view_6"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginBottom="41dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mv_detail_location"/>


        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>

