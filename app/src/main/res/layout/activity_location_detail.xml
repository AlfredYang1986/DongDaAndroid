<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.LocationDetailActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/icon_back_dark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.constraint.Guideline
            android:id="@+id/gl_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.171"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.constraint.Guideline
            android:id="@+id/gl_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.231"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/cl_tl_tr_2_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gl_2"/>


        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/icon_camera"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_2"
            app:layout_constraintTop_toBottomOf="@id/cv_phpto"/>


        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_entrance_guard"
            app:layout_constraintLeft_toRightOf="@id/iv_1"
            app:layout_constraintRight_toLeftOf="@id/iv_3"
            app:layout_constraintTop_toBottomOf="@id/cv_phpto"
            app:layout_constraintTop_toTopOf="@id/iv_1"/>


        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_emergency"
            app:layout_constraintLeft_toRightOf="@id/iv_2"
            app:layout_constraintRight_toLeftOf="@id/tv_more_num"
            app:layout_constraintTop_toBottomOf="@id/cv_phpto"
            app:layout_constraintTop_toTopOf="@id/iv_1"/>


        <TextView
            android:id="@+id/tv_more_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="68dp"
            android:text="+6"
            android:textColor="#FF5464AC"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintLeft_toRightOf="@id/iv_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_phpto"
            app:layout_constraintTop_toTopOf="@id/iv_1"
            />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="实时监控"
            android:textColor="#FFA6A6A6"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="@id/iv_1"
            app:layout_constraintRight_toRightOf="@id/iv_1"
            app:layout_constraintTop_toBottomOf="@id/iv_1"
            />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="门禁"
            android:textColor="#FFA6A6A6"
            android:textSize="11sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_1"
            app:layout_constraintLeft_toLeftOf="@id/iv_2"
            app:layout_constraintRight_toRightOf="@id/iv_2"
            />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="急救包"
            android:textColor="#FFA6A6A6"
            android:textSize="11sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_1"
            app:layout_constraintLeft_toLeftOf="@id/iv_3"
            app:layout_constraintRight_toRightOf="@id/iv_3"
            />

        <TextView
            android:id="@+id/tv_more_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textColor="#FFA6A6A6"
            android:textSize="11sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_1"
            app:layout_constraintLeft_toLeftOf="@id/tv_more_num"
            app:layout_constraintRight_toRightOf="@id/tv_more_num"
            />


        <View
            android:id="@+id/view_line_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            android:background="#FF979797"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_1"
            />

        <ImageView
            android:id="@+id/iv_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_route"
            app:layout_constraintBottom_toBottomOf="@id/tv_loc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_loc"/>

        <TextView
            android:id="@+id/tv_loc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="23.5dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="距地铁6号线潞城站B口步行500m"
            android:textColor="#FF5F6270"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/iv_route"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line_1"
            />


        <android.support.v7.widget.CardView
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="75.5dp"
            android:layout_marginRight="14dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="6dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_loc">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                     android:id="@+id/tv_loc_short"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="PROGWARTS-科学空间 青年路站"
                    android:textColor="#FF404040"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:id="@+id/iv_enter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/icon_enter_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="17dp"
                    app:layout_constraintRight_toLeftOf="@id/iv_enter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_loc_short"
                    app:layout_constraintLeft_toLeftOf="@id/tv_loc_short"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="青年路甘露园中街天鹅湾南区底商雅成三里2号楼107室"
                    android:textColor="#FF5F6270"
                    android:textSize="14sp"
                    />


            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cv_phpto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gl_1">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_photo"
                    android:layout_width="match_parent"
                    android:layout_height="207dp"/>


                <TextView
                    android:id="@+id/tv_photo_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/tv_loc_4_4_bg_shape"
                    android:text="休息区"
                    android:textColor="#FFFFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/vp_photo"
                    app:layout_constraintRight_toRightOf="@id/vp_photo"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/8"
                    android:textColor="#FFFFFFFF"
                    android:textSize="11sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_photo_dec"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>