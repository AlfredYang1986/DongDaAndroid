<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    tools:context="com.blackmirror.dongda.ui.activity.MyBrandActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/sys_bar_white"
        app:contentInsetStart="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:background="@drawable/icon_back_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_home_head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_brand_header"
                android:textColor="#FF0D0D0D"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <View
                android:background="#0D000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="0dp"
                android:layout_height="0.5dp"/>


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.Toolbar>

    <com.facebook.drawee.view.SimpleDraweeView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_toolbar"
        android:layout_marginTop="14dp"
         android:id="@+id/sv_brand_photo"
        app:placeholderImage="@mipmap/dongda_logo"
        app:placeholderImageScaleType="focusCrop"
        app:actualImageScaleType="focusCrop"
        android:layout_width="72dp"
        android:layout_height="72dp"/>

    <TextView
        android:typeface="sans"
        android:textStyle="bold"
         android:id="@+id/tv_brand_name"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_brand_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="智优机器人"
        android:textColor="#FF404040"
        android:textSize="22sp"
        />

    <TextView
         android:id="@+id/tv_about_brand_dec"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:typeface="sans"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_brand"
        android:textColor="#FF0D0D0D"
        android:textSize="15sp"
        />


    <TextView
         android:id="@+id/tv_about_brand"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_about_brand_dec"
        app:layout_constraintTop_toBottomOf="@id/tv_about_brand_dec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="品牌名称是发了空间发拉萨，反馈卡奥拉夫都是扣罚款。罚款联发科，打过来扩大及卡黄金进口。噶几哦刚打开来得及，更多；两个健康咖喱感觉到拉看见啦改革的。"
        android:textColor="#FF737373"
        android:textSize="15sp"
        />

</android.support.constraint.ConstraintLayout>
