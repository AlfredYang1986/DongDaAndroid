<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/sv_care_list_photo"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        app:actualImageScaleType="focusCrop"
        app:roundedCornerRadius="4dp"
        />

    <ImageView
         android:id="@+id/iv_care_list_like"
        android:layout_marginTop="15dp"
        android:layout_marginRight="13dp"
        app:layout_constraintTop_toTopOf="@id/sv_care_list_photo"
        app:layout_constraintRight_toRightOf="@id/sv_care_list_photo"
        android:background="@drawable/home_art_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintLeft_toLeftOf="@id/sv_care_list_photo"
        android:id="@+id/tv_care_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="蒙特梭利"
        android:textColor="#FF23554F"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/sv_care_list_photo"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_care_list_name"
        app:layout_constraintLeft_toLeftOf="@id/sv_care_list_photo"
        android:id="@+id/tv_care_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="皮皮时光的日间看顾"
        android:textColor="#FF404040"
        android:textSize="18sp"
        />

    <TextView

        app:layout_constraintLeft_toLeftOf="@id/sv_care_list_photo"
        android:id="@+id/tv_care_list_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="大兴区"
        android:textColor="#FF737373"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_care_list_content"
        />
</android.support.constraint.ConstraintLayout>
