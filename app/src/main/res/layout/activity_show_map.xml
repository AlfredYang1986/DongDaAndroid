<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShowMapActivity">

    <android.support.constraint.Guideline
         android:id="@+id/gl_root"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7587"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.amap.api.maps2d.MapView
        app:layout_constraintBottom_toBottomOf="@id/gl_root"
        android:id="@+id/mv_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
         android:id="@+id/iv_map_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="9dp"
        android:background="@drawable/icon_map_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_root"
        android:layout_marginLeft="16dp"
        app:actualImageScaleType="focusCrop"
         android:id="@+id/sv_map_photo"
        android:background="@drawable/home_cover_00"
        android:layout_width="117dp"
        android:layout_height="72dp"/>

    <TextView
         android:id="@+id/tv_map_title"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/gl_root"
        app:layout_constraintLeft_toRightOf="@id/sv_map_photo"
        android:layout_width="60dp"
        android:layout_height="21dp"
        android:text="日间看顾"
        android:textColor="#FF737373"
        android:textSize="15sp"
        />

    <TextView
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="14dp"
        app:layout_constraintLeft_toRightOf="@id/sv_map_photo"
        app:layout_constraintTop_toBottomOf="@id/tv_map_title"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="花瓣点金贝贝的早教日间看顾发的撒地方"
        android:textColor="#FF404040"
        android:textSize="17sp"
        />

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="#1F000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_map_photo"
        />

    <ImageView
        app:layout_constraintRight_toLeftOf="@id/tv_map_location"
         android:id="@+id/iv_map_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
         android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        android:background="@drawable/icon_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
         android:id="@+id/tv_map_location"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@id/iv_map_location"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="朝阳区酒仙桥路52号东方科技园1号楼B座3层"
        android:textColor="#FF404040"
        android:textSize="15sp"
        />


</android.support.constraint.ConstraintLayout>