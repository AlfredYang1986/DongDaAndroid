<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.NearServiceActivity">

    <android.support.constraint.Guideline
         android:id="@+id/gl_root"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7587"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.amap.api.maps2d.MapView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/mv_near_map"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
         android:id="@+id/iv_current_location"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/gl_root"
        android:background="@drawable/btn_current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
         android:id="@+id/iv_near_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="9dp"
        android:background="@drawable/icon_map_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





</android.support.constraint.ConstraintLayout>