<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:background="@color/sys_bar_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.BrandDetailActivity">



        <android.support.v7.widget.Toolbar
             android:id="@+id/tb_toolbar"
            android:background="@color/sys_bar_white"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <ImageView
                    android:id="@+id/iv_home_head_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/icon_back_dark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:text="PRO科学空间"
                    android:id="@+id/tv_home_head_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0D0D0D"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>



    <android.support.v4.widget.NestedScrollView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                 android:id="@+id/tv_brand_name"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="29dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRO科学空间"
                android:textColor="#FF34384A"
                android:textSize="20sp"
                />

            <TextView
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toLeftOf="@id/sv_brand_logo"
                app:layout_constraintTop_toBottomOf="@id/tv_brand_name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="29dp"
                 android:id="@+id/tv_brand_dec"
                android:layout_marginTop="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="「彩色方块的转动中感受魔方的魅力」"
                android:textColor="#FF5F6270"
                android:textSize="14sp"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                app:layout_constraintTop_toTopOf="@id/tv_brand_name"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="19dp"
                 android:id="@+id/sv_brand_logo"
                app:placeholderImageScaleType="focusCrop"
                app:actualImageScaleType="focusCrop"
                app:roundedCornerRadius="5.14dp"
                app:placeholderImage="@drawable/pro_logo"
                android:elevation="4dp"
                android:layout_width="74dp"
                android:layout_height="74dp"/>

            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_brand_dec"
                 android:id="@+id/tv_brand_adv_1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="29dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="场景教学"
                android:textColor="#FFB5B6BC"
                android:textSize="13sp"
                />

            <View
                 android:id="@+id/view_line_1"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                app:layout_constraintLeft_toRightOf="@id/tv_brand_adv_1"
                app:layout_constraintTop_toTopOf="@id/tv_brand_adv_1"
                app:layout_constraintBottom_toBottomOf="@id/tv_brand_adv_1"
                android:layout_marginLeft="8dp"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#FFD9D9D9"
                />

            <TextView
                app:layout_constraintLeft_toRightOf="@id/view_line_1"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_brand_dec"
                 android:id="@+id/tv_brand_adv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="先进理念"
                android:textColor="#FFB5B6BC"
                android:textSize="13sp"
                />

            <View
                android:id="@+id/view_line_2"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                app:layout_constraintLeft_toRightOf="@id/tv_brand_adv_2"
                app:layout_constraintTop_toTopOf="@id/tv_brand_adv_2"
                app:layout_constraintBottom_toBottomOf="@id/tv_brand_adv_2"
                android:layout_marginLeft="8dp"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#FFD9D9D9"
                />

            <TextView
                app:layout_constraintLeft_toRightOf="@id/view_line_2"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_brand_dec"
                android:id="@+id/tv_brand_adv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专业团队"
                android:textColor="#FFB5B6BC"
                android:textSize="13sp"
                />


            <com.blackmirror.dongda.ui.view.MyTabLayout
                 android:id="@+id/mtb_brand"
                app:tabGravity="fill"
                app:tabIndicatorColor="#FF5464AC"
                app:tabIndicatorHeight="4dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#FF5464AC"
                app:tabTextColor="#FF34384A"
                app:layout_constraintTop_toBottomOf="@id/tv_brand_adv_1"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <View
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/mtb_brand"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#FFE5E5E5"
                />


        </android.support.constraint.ConstraintLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>