<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    tools:context="com.blackmirror.dongda.ui.activity.SettingActivity">



    <android.support.v7.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="14dp"
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/sys_bar_white"
        app:contentInsetStart="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:background="@drawable/icon_back_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_home_head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_setting"
                android:textColor="#FF0D0D0D"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <View
                android:background="#0D000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="0dp"
                android:layout_height="0.5dp"/>


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.Toolbar>



    <TextView
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="16dp"
         android:id="@+id/tv_version_dec"
        app:layout_constraintTop_toBottomOf="@id/tb_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="版本"
        android:textColor="#FF34384A"
        android:textSize="14sp"
        />

    <TextView
         android:id="@+id/tv_version_code"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_version_dec"
        app:layout_constraintBottom_toBottomOf="@id/tv_version_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v 0.0.0"
        android:textColor="#FFB5B6BC"
        android:textSize="14sp"
        />

    <View
        app:layout_constraintTop_toBottomOf="@id/tv_version_dec"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFF2F2F2"
        />

    <Button
        android:text="退出"
        android:textColor="#FFE36A64"
        android:textSize="17sp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bt_logout_shape"
        android:layout_width="0dp"
        android:layout_height="54dp"/>


</android.support.constraint.ConstraintLayout>
