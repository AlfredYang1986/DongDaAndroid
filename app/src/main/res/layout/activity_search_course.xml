<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.homeActivity.SearchCourseActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_search"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/et_search_bg_shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_search_cancel"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@drawable/icon_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <EditText
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@null"
            app:layout_constraintLeft_toRightOf="@id/iv_search"
            app:layout_constraintRight_toLeftOf="@id/iv_clear_text"
            />

        <ImageView

            android:id="@+id/iv_clear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:background="@drawable/icon_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_search_cancel"
        android:layout_width="34dp"
        android:layout_height="24dp"
        android:layout_marginRight="20dp"
        android:text="取消"
        android:textColor="#FF5464AC"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/cl_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cl_search"
        />

    <com.blackmirror.dongda.ui.view.MyTabLayout
        android:id="@+id/tb_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_search"
        app:tabGravity="fill"
        app:tabIndicatorColor="#FF5464AC"
        app:tabIndicatorHeight="4dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#FF34384A"
        app:tabTextColor="#FF34384A"/>

    <View
         android:id="@+id/view_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_search"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFF2F2F2"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_1"
         android:id="@+id/rv_search_course"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>