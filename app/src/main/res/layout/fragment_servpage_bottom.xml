<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    tools:context="com.blackmirror.dongda.fragment.DefaultFragment.AYTabBarFragment">

    <Button
        android:id="@+id/servpage_botoom_chat"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="沟通"
        android:textSize="12sp"
        android:textColor="@color/colorGary227"
        android:background="@color/colorAlpha"
        android:drawableTop="@drawable/details_icon_chat"/>

    <Button
        android:id="@+id/servpage_bottom_book"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="查看可预定时间"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/details_button_checktime"/>


    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/servpage_botoom_chat"
        android:layout_toLeftOf="@id/servpage_bottom_book">

        <TextView
            android:id="@+id/servpage_bottom_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="¥ Price"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/servpage_bottom_leastcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至少预定时间"
            android:layout_below="@id/servpage_bottom_price"
            android:layout_alignLeft="@id/servpage_bottom_price"
            android:layout_alignStart="@id/servpage_bottom_price"
            android:layout_marginTop="2dp"
            android:textSize="12sp"/>

    </RelativeLayout>
    <View
        android:id="@+id/view_servpage_bottom"
        android:background="@color/colorDarkLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"/>
    <View
        android:id="@+id/view_servpage_line_lr"
        android:background="@color/colorDarkLine"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/servpage_botoom_chat"/>

</RelativeLayout>