<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    tools:context="com.blackmirror.dongda.fragment.AYTabBarFragment">

    <Button
        android:id="@+id/servpage_botoom_chat"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="沟通"
        android:textSize="12sp"
        android:textColor="@color/colorGary227"
        android:background="@color/colorAlpha"
        android:drawableTop="@drawable/tab_icon_home_select" />

    <RelativeLayout
        android:layout_alignLeft="@id/servpage_botoom_chat"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="150dp">

        <TextView
            android:id="@+id/servpage_bottom_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="¥ Price"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/servpage_bottom_leastcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至少预定时间"
            android:layout_below="@id/servpage_bottom_price"
            android:layout_alignLeft="@id/servpage_bottom_price"
            android:layout_alignStart="@id/servpage_bottom_price"
            android:layout_marginTop="2dp"
            android:textSize="12sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/servpage_bottom_book"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:text="查看可预定时间"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:background="@color/colorTheme"/>

    <View
        android:id="@+id/view_servpage_bottom"
        android:background="@color/colorDarkLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"/>

</RelativeLayout>